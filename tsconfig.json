{
   "compilerOptions": {
      "module": "es6",
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": false,
      "target": "es6",
      "outDir": "dist/esm",
      "lib": [
         "es6"
      ],
      "types": [
         "node",
         "mocha"
      ],
      "declaration": true,
      "noImplicitThis": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "alwaysStrict": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "noFallthroughCasesInSwitch": true,
      "esModuleInterop": true
   },
   "include": [
      "src/**/*.ts"
   ]
}
